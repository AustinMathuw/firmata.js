{
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "globals": {
    "it": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "before": true
  },
  "rules": {
    "curly": [ 2, "all" ],
    "dot-notation": 0,
    "eqeqeq": 0,
    "keyword-spacing": [ 2, {} ],
    "no-caller": 2,
    "no-cond-assign": [2,"except-parens"],
    "no-console": 0,
    "no-empty": 0,
    "no-eq-null": 0,
    "no-undef": 2,
    "no-unused-vars": "error",
    "no-use-before-define": 0,
    "quotes": [ 2, "double", {"avoidEscape": true}],
    "strict": 0,
    "wrap-iife": [2, "any"]
  }
}
